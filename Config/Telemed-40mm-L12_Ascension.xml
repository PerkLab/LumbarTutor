<PlusConfiguration version="2.3">

  <DataCollection StartupDelaySec="1.0" >
    <DeviceSet 
      Name="Telemed L12 40mm Ascension"
      Description="EM sensors: 1 Probe, 2 Reference, 3 Needle." 
    />

    <Device
      Id="TrackerDevice" 
      Type="Ascension3DG" 
      AcquisitionRate="50" 
      LocalTimeOffsetSec="0.0" 
      FilterAcWideNotch="1"
      FilterAlpha="1"
      FilterDcAdaptive="1"
      ToolReferenceFrame="Tracker">
      <DataSources>
        <DataSource Type="Tool" Id="Probe" BufferSize="500" PortName="0" />
        <DataSource Type="Tool" Id="Reference" BufferSize="500" PortName="1" />
        <DataSource Type="Tool" Id="Needle" BufferSize="500" PortName="2" />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerStream" >
          <DataSource Id="Probe"/>
          <DataSource Id="Reference"/>
          <DataSource Id="Needle"/>
        </OutputChannel>
      </OutputChannels>
    </Device>

    <Device
      Id="VideoDevice"
      Type="TelemedVideo"
      DepthMm="70">
      <DataSources>
        <DataSource Type="Video" Id="Video" PortUsImageOrientation="UF" />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="UltrasoundStream" VideoDataSourceId="Video" />
      </OutputChannels>
    </Device>

    <Device 
      Id="TrackedUltrasoundDevice" 
      Type="VirtualMixer" >
      <InputChannels>
        <InputChannel Id="TrackerStream" />
        <InputChannel Id="UltrasoundStream" />
      </InputChannels>
      <OutputChannels>
        <OutputChannel Id="TrackedUltrasoundStream"/>
      </OutputChannels>
    </Device>

    <Device
      Id="TrackedUltrasoundCaptureDevice"
      Type="VirtualCapture"
      BaseFilename="Recording.mhd"
      EnableCapturingOnStart="FALSE"
      RequestedFrameRate="15" >
      <InputChannels>
        <InputChannel Id="TrackedUltrasoundStream" />
      </InputChannels>
    </Device>

    <Device
      Id="WebcamDevice" 
      Type="MmfVideo" 
      FrameSize="640 480"
      VideoFormat="YUY2"
      CaptureDeviceId="0" >
      <DataSources>
        <DataSource Type="Video" Id="Video" PortUsImageOrientation="MF" ImageType="BRIGHTNESS" />
      </DataSources>      
      <OutputChannels>
        <OutputChannel Id="WebcamStream" VideoDataSourceId="Video" />
      </OutputChannels>
    </Device>
    
    <Device 
      Id="WebcamCaptureDevice"
      Type="VirtualCapture"
      BaseFilename="WebcamRecording.mhd"
      EnableCapturingOnStart="FALSE"
      RequestedFrameRate="15">
      <InputChannels>
        <InputChannel Id="WebcamStream" />
      </InputChannels>
    </Device>

  </DataCollection>

  <PlusOpenIGTLinkServer
    MaxNumberOfIgtlMessagesToSend="1"
    MaxTimeSpentWithProcessingMs="50"
    ListeningPort="18944"
    SendValidTransformsOnly="true"
    OutputChannelId="TrackedUltrasoundStream" >
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="IMAGE" />
        <Message Type="TRANSFORM" />
      </MessageTypes>
      <TransformNames>
        <Transform Name="ProbeToReference" />
        <Transform Name="NeedleToReference" />
        <Transform Name="ImageToProbe" />
      </TransformNames>
      <ImageNames>
        <Image Name="Ultrasound" EmbeddedTransformToFrame="Ultrasound" />
      </ImageNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>
  
  <PlusOpenIGTLinkServer
    MaxNumberOfIgtlMessagesToSend="1"
    MaxTimeSpentWithProcessingMs="50"
    ListeningPort="18945"
    SendValidTransformsOnly="true"
    OutputChannelId="WebcamStream">
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="IMAGE" />
      </MessageTypes>
      <ImageNames>
        <Image Name="Webcam" EmbeddedTransformToFrame="Webcam" />
      </ImageNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>

  <CoordinateDefinitions>

    <!-- Probe calibration using needle-based method-->
    <Transform From="Image" To="Probe"
      Matrix="
      -0.000119996 0.08082 0.00144618 50.2175 
      -0.0808317 -0.000112053 -0.00044491 33.1874 
      -0.000442834 -0.00144682 0.0808189 21.7901 
      0 0 0 1 
      "
      Date="2015.10.27 14:06:18" /> 

  </CoordinateDefinitions> 

</PlusConfiguration>